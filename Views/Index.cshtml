
@model IEnumerable<QueueSystem.Domain.Models.TareaItem>
    <h2>Lista de Tareas</h2>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Tarea</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Prioridad</th>
                <th>Fecha Ejecución</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.Nombre</td>
                <td>@tarea.Prioridad</td>
                <td>@tarea.FechaEjecucion.ToShortDateString()</td>
                <td>@tarea.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tarea.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@tarea.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
