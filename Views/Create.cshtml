@model QueueSystem.Domain.Models.TareaItem
<h2>Crear Tarea</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Prioridad"></label>
        <input asp-for="Prioridad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaEjecucion"></label>
        <input asp-for="FechaEjecucion" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>
