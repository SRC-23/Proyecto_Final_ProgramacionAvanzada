@model QueueSystem.ML.Models.Tarea

@{
    ViewData["Title"] = "Editar Tarea";
}

<h2>Editar Tarea</h2>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label asp-for="NombreTarea"></label>
        <input asp-for="NombreTarea" class="form-control" />
        <span asp-validation-for="NombreTarea" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prioridad"></label>
        <input asp-for="Prioridad" class="form-control" />
        <span asp-validation-for="Prioridad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaEjecucion"></label>
        <input asp-for="FechaEjecucion" type="date" class="form-control" />
        <span asp-validation-for="FechaEjecucion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
            <option value="Pendiente">Pendiente</option>
            <option value="Completada">Completada</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
